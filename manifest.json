{
  "manifest_version": 3,
  "name": "Instagram 智能涨粉",
  "version": "1.0.1",
  "description": "简化版涨粉工具",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*.trtrc.com/*",
    "*://*.instagram.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.instagram.com/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "panel.html",
        "icons/icon32.png",
        "icons/icon48.png",
        "injected.js" 
      ],
      "matches": ["*://*.instagram.com/*"]
    }
  ]
}
